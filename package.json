{
  "name": "cypress-application",
  "version": "1.0.0",
  "description": "Cypress Community Problem Reporting Application - Full Stack MERN Application",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "config"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "build": "npm run client:build && npm run server:build",
    "client:build": "cd client && npm run build",
    "server:build": "cd server && npm run build",
    "start": "cd server && npm start",
    "test": "npm run server:test && npm run client:test",
    "server:test": "cd server && npm test",
    "client:test": "cd client && npm test",
    "test:coverage": "npm run server:test:coverage && npm run client:test:coverage",
    "server:test:coverage": "cd server && npm run test:coverage",
    "client:test:coverage": "cd client && npm run test:coverage",
    "lint": "npm run server:lint && npm run client:lint",
    "server:lint": "cd server && npm run lint",
    "client:lint": "cd client && npm run lint",
    "lint:fix": "npm run server:lint:fix && npm run client:lint:fix",
    "server:lint:fix": "cd server && npm run lint:fix",
    "client:lint:fix": "cd client && npm run lint:fix",
    "format": "npm run server:format && npm run client:format",
    "server:format": "cd server && npm run format",
    "client:format": "cd client && npm run format",
    "format:check": "npm run server:format:check && npm run client:format:check",
    "server:format:check": "cd server && npm run format:check",
    "client:format:check": "cd client && npm run format:check",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "clean": "rm -rf node_modules server/node_modules client/node_modules server/dist client/dist",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --rmi all",
    "setup": "./setup-dev.sh",
    "docker:setup": "./docker-scripts.sh start"
  },
  "keywords": [
    "community",
    "reporting",
    "citizen",
    "issues",
    "tracking",
    "mern",
    "mongodb",
    "express",
    "react",
    "nodejs"
  ],
  "author": "Cypress Development Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/cypress-application.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/cypress-application/issues"
  },
  "homepage": "https://github.com/your-username/cypress-application#readme"
}